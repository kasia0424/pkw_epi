<h1><%= @page_title %></h1>

<div class = "container">
  <%= form_for  @committee,
                :url => committees_path,
                html: { multipart: true } do |f|
  %>
      <div class="form-group">
        <%= f.label :Nazwa_komitetu %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Logo %>
        <%= f.file_field :logo, class:'form-control' %>
      </div>
      <%= f.submit "Zapisz", class:'btn btn-primary' %>
  <% end %>
</div>
