<!DOCTYPE html>
<html>
<head>
  <title>PkwEpi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button"
              class="navbar-toggle collapsed"
              data-toggle="collapse"
              data-target="#navbar"
              aria-expanded="false"
              aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'PKW_EPI', root_path, class:'navbar-brand' %>    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class ="<%= params[:controller] == 'voivodeships' ? 'dropdown active' : 'dropdown'  %>">
          <%= link_to 'Województwa',
                      voivodeships_path,
                      :class => 'dropdown-toggle',
                      :data => {
                              :toggle => 'dropdown',
                              :role => 'button',
                              #:aria-expanded => 'false'
                      } %>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Dodaj województwo', new_voivodeship_path %></li>
            <li><%= link_to 'Edytuj województwa', voivodeships_path %></li>
          </ul>
        </li>
        <li class = "<%= params[:controller] == 'constituencies' ? 'dropdown active' : 'dropdown'  %>">
          <%= link_to 'Okręgi wyborcze',
              constituencies_path,
              :class => 'dropdown-toggle',
              :data => {
                  :toggle => 'dropdown',
                  :role => 'button',
                  #:aria-expanded => 'false'
              }
          %>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Dodaj okręg', new_constituency_path %></li>
              <li><%= link_to 'Edytuj okręgi', constituencies_path %></li>
            </ul>
        </li>
        <li class = "<%= params[:controller] == 'committees' ? 'dropdown active' : 'dropdown'  %>">
          <%= link_to 'Komitety', committees_path,
                      :class => 'dropdown-toggle',
                      :data => {
                              :toggle => 'dropdown',
                              :role => 'button',
                              #:aria-expanded => 'false'
                      } %>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Dodaj komitet', new_committee_path %></li>
            <li><%= link_to 'Edytuj komitety', committees_path %></li>
          </ul>
        </li>
        <li class = "<%= params[:controller] == 'about' ? 'active' : ''  %>">
          <%= link_to 'O aplikacji', about_path %>
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<%= yield %>

</body>
</html>
