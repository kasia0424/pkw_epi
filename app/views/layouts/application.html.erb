<!DOCTYPE html>
<html>
<head>
  <title>PkwEpi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button"
              class="navbar-toggle collapsed"
              data-toggle="collapse"
              data-target="#navbar"
              aria-expanded="false"
              aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'PKW_EPI', root_path, class:'navbar-brand' %>    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class ="<%= params[:controller] == 'voivodeships' ? 'active' : ''  %>">
          <%= link_to 'Wojewódzwtwa', voivodeships_path %></li>
        <li class = "<%= params[:controller] == 'committees' ? 'active' : ''  %>">
          <%= link_to 'Komitety', committees_path %></li>
        <li class = "<%= params[:controller] == 'constituencies' ? 'active' : ''  %>">
          <%= link_to 'Okręgi wyborcze', constituencies_path %></li>
        <li class = "<%= params[:controller] == 'about' ? 'active' : ''  %>">
          <%= link_to 'O aplikacji', about_path %></li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<%= yield %>

</body>
</html>
