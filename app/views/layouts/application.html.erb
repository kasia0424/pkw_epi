<!DOCTYPE html>
<html>
<head>
  <title>PkwEpi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button"
                  class="navbar-toggle collapsed"
                  data-toggle="collapse"
                  data-target="#navbar"
                  aria-expanded="false"
                  aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'PKW_EPI', root_path, class:'navbar-brand' %>    </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class ="<%= params[:controller] == 'voivodeships' ? 'dropdown active' : 'dropdown'  %>"></li>
            <li class = "<%= params[:controller] == 'constituencies' ? 'dropdown active' : 'dropdown'  %>"></li>
            <li class = "<%= params[:controller] == 'committees' ? 'dropdown active' : 'dropdown'  %>"></li>
            <li class = "<%= params[:controller] == 'about' ? 'active' : ''  %>">
              <%= link_to 'O aplikacji', about_path %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
                Signed in as <%= current_user.email %>. Not you?
                <li class = "dropdown"><%= link_to "Wyloguj", destroy_user_session_path, :method => :delete %></li>
            <% else %>
                <li class ="dropdown"><%= link_to "Zaloguj się", new_user_session_path %></li>
            <% end %>

            <% flash.each do |name, msg| %>
                <%= content_tag :div, msg, id: "flash_#{name}" %>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

<div class = "container">
  <h2>Użytkownik</h2>


  <%= yield %>
</div>

</body>
</html>
