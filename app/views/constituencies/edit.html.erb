<h1><%= @page_title %></h1>

<div class = "container">
  <%= form_for @constituency do |f| %>
      <div class="form-group">
        <%= f.label :Liczba_wydanych_kart %>
        <%= f.text_field :number_of_used_ballots, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Głosy_nieważne_brak_głosu %>
        <%= f.text_field :invalid_votes_no_choice, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Głosy_nieważne_dwa_głosy %>
        <%= f.text_field :invalid_votes_more_choices, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Głosy_nieważne_inne %>
        <%= f.text_field :invalid_votes_other, class:'form-control' %>
      </div>

      <%= f.submit "Zapisz", class:'btn btn-primary' %>
  <% end %>
</div>