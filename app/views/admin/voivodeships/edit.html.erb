<h1><%= @page_title %></h1>

<div class = "container">
  <%= form_for [:admin, @voivodeship] do |f| %>
      <div class="form-group">
        <%= f.label :Nazwa_województwa %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Miejsca_w_sejmiku_wojewódzkim %>
        <%= f.text_field :places_regional_council, class:'form-control' %>
      </div>
      <%= f.submit "Zapisz", class:'btn btn-primary' %>
  <% end %>
</div>
