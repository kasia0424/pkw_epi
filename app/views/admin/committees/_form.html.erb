      <%= f.label :Nazwa_komitetu %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :Logo %>
      <%= f.file_field :image, class:'form-control' %>
    </div>
